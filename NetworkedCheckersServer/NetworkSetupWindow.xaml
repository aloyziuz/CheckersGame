<Window x:Class="NetworkedCheckersServer.NetworkSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="networkSetupWindow" Height="115.037" Width="283.083" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label x:Name="ipLbl" Content="IP Address:" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="69" IsEnabled="False"/>
        <TextBox x:Name="ipTxt" HorizontalAlignment="Left" Height="23" Margin="83,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" IsEnabled="False" TextChanged="ipTxt_TextChanged"/>
        <Label x:Name="portLbl" Content="Port Number: 50000" HorizontalAlignment="Left" Margin="0,41,0,0" VerticalAlignment="Top"/>
        <Button x:Name="okBtn" Content="Okay" HorizontalAlignment="Left" Margin="111,83,0,0" VerticalAlignment="Top" Width="75" Click="okBtn_Click"/>
        <Slider x:Name="portSlider" HorizontalAlignment="Left" Margin="122,45,0,0" VerticalAlignment="Top" Minimum="49155" Maximum="65535" Value="50000" ValueChanged="portSlider_ValueChanged" Width="154"/>
    </Grid>
</Window>
