<Window x:Class="NetworkedCheckersClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login " Height="120.676" Width="302.255" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" WindowStyle="None" BorderThickness="5">
    <Grid>
        <Label x:Name="usernameLbl" Content="User Name: " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="passwordLbl" Content="Password:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="usernameTxt" HorizontalAlignment="Left" Height="25" Margin="90,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="193"/>
        <PasswordBox x:Name="passwordbox" HorizontalAlignment="Left" Margin="90,41,0,0" VerticalAlignment="Top" Width="193" Height="26"/>
        <Button x:Name="okBtn" Content="Okay" HorizontalAlignment="Left" Margin="111,80,0,0" VerticalAlignment="Top" Width="75" Click="okBtn_Click"/>

    </Grid>
</Window>
